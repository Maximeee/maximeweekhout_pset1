<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appstudio.maxime.mrpotatohead.MainActivity">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/arms"
        android:id="@+id/arms"
        android:onClick="onCheckboxClicked"
        android:layout_above="@+id/ears"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/ears"
        android:id="@+id/ears"
        android:layout_above="@+id/eyebrows"
        android:onClick="onCheckboxClicked"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/eyebrows"
        android:id="@+id/eyebrows"
        android:layout_above="@+id/eyes"
        android:onClick="onCheckboxClicked"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/eyes"
        android:id="@+id/eyes"
        android:layout_above="@+id/glasses"
        android:onClick="onCheckboxClicked"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/glasses"
        android:id="@+id/glasses"
        android:onClick="onCheckboxClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/shoes"
        android:id="@+id/shoes"
        android:onClick="onCheckboxClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="104dp"
        android:layout_marginEnd="104dp"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/nose"
        android:id="@+id/nose"
        android:onClick="onCheckboxClicked"
        android:layout_above="@+id/shoes"
        android:layout_alignLeft="@+id/shoes"
        android:layout_alignStart="@+id/shoes"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/mustache"
        android:id="@+id/mustache"
        android:onClick="onCheckboxClicked"
        android:layout_above="@+id/nose"
        android:layout_alignLeft="@+id/nose"
        android:layout_alignStart="@+id/nose"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/mouth"
        android:id="@+id/mouth"
        android:layout_above="@+id/mustache"
        android:layout_alignLeft="@+id/mustache"
        android:layout_alignStart="@+id/mustache"
        android:clickable="true"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/hat"
        android:id="@+id/hat"
        android:onClick="onCheckboxClicked"
        android:layout_above="@+id/mouth"
        android:layout_alignLeft="@+id/mouth"
        android:layout_alignStart="@+id/mouth"
        android:clickable="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/arms">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_body"
            android:src="@drawable/body"
            android:contentDescription="@string/body"
            android:clickable="false"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_eyes"
            android:src="@drawable/eyes"
            android:contentDescription="@string/eyes"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_arms"
            android:src="@drawable/arms"
            android:contentDescription="@string/arms"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_ears"
            android:src="@drawable/ears"
            android:contentDescription="@string/ears"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_nose"
            android:src="@drawable/nose"
            android:contentDescription="@string/nose"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/image_eyebrows"
            android:src="@drawable/eyebrows"
            android:contentDescription="@string/eyebrows"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_hat"
            android:src="@drawable/hat"
            android:contentDescription="@string/hat"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_shoes"
            android:src="@drawable/shoes"
            android:contentDescription="@string/shoes"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_mouth"
            android:src="@drawable/mouth"
            android:contentDescription="@string/mouth"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_mustache"
            android:src="@drawable/mustache"
            android:contentDescription="@string/mustache"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/image_glasses"
            android:src="@drawable/glasses"
            android:contentDescription="@string/glasses"
            android:visibility="invisible"
            android:layout_gravity="center" />

    </FrameLayout>

</RelativeLayout>
